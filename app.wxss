page {
  background: #F6F6F6;
}

.input-value {
  display: inline-block;
  max-width: 3.5em;
  font-size: 16px;
  text-align: center;
  border: 1px solid #CCCCCC;
  border-radius: 4px;
  padding: 2px;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.btn {
  flex-grow: 1;
}

.btn[type="primary"] {
  color: #FFF;
  background: #1ABCFE;
}
.btn[type="default"] {
  color: #FFF;
  background: #66C53A;
}