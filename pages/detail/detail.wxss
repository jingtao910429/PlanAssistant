
.block {
  margin: 15px;
  background: #FFF;
  border-radius: 8px;
  box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1)
}

.block-row {
  display: flex;
  justify-content: space-between;
  margin: 15px;
  padding: 0 10px;
}

.block-row:first-child {
  padding-top: 20px;
}

.block-row:last-child {
  padding-bottom: 20px;
}

.block-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.block-subtitle {
  max-width: 15em;
  font-size: 12px;
  color: #FF983C;
}